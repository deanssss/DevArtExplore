<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ipc.BinderPoolActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/num_a_et"
            android:hint="a"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="Autofill,HardcodedText" />

        <TextView
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/num_b_et"
            android:hint="b"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="Autofill,HardcodedText" />

        <Button
            android:id="@+id/plus_bt"
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:minWidth="10dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/result_tv"
            android:text="&#191;&#191;"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <EditText
            android:id="@+id/encrypt_content_et"
            android:hint="encrypt"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="Autofill,HardcodedText" />

        <Button
            android:id="@+id/decrypt_bt"
            android:text="&lt;"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:minWidth="10dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/encrypt_bt"
            android:text="&gt;"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:minWidth="10dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/decrypt_content_et"
            android:hint="decrypt"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="Autofill,HardcodedText" />
    </LinearLayout>
</LinearLayout>